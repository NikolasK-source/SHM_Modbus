        <release version="1.0.1" date="2022-09-02"/>
        <release version="1.0.0" date="2022-08-19"/>
    </releases>
    <provides>
        <binary>modbus-shm</binary>
        <binary>modbus-tcp-client-shm</binary>
        <binary>modbus-rtu-client-shm</binary>
        <binary>dump-shm</binary>
